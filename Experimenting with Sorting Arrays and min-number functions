import numpy as np
data=np.random.random((10))
array1=np.random.random((10))

def min_array(data):
    #store first number
    lowest_num = data[0]

#for every number in the range of the list
    for i in range(0, len(data)):
        #if current number in the array is lower than first number
        if data[i] < lowest_num:
            #store as variable
            lowest_num = (data[i])
            #state that the current index is the lowest index
            i_index = (i)

# if it is not lower, continue
        else:
            continue

    return(lowest_num, i_index)

# function to sort an array in ascending order

def sort(array1):
    array2 = np.array([], dtype=array1.dtype)

    while array1.size > 0:
       
        min_index = np.argmin(array1)
     
        array2 = np.append(array2, array1[min_index])
    
        array1 = np.delete(array1, min_index)

    return array2

array1 = np.random.random(10)
sorted_array = sort(array1)
print(sorted_array)
